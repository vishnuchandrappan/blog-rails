<div class="header">
    <nav>
        <div class="logo">
            <h2><%= link_to 'Rails Blog', root_path %></h2>
        </div>
        <div class="burger">
            <span id="line1"></span>
            <span id="line2"></span>
            <span id="line3"></span>
        </div>
        <ul>
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'About', about_path %></li>
            <% if  logged_in? %>
                <li class="username">
                    <span> <%= current_user.name %> </span>
                    <div>
                        <span> <%= link_to 'Profile', current_user %> </span>
                        <span> <%= link_to 'Settings', edit_user_path(current_user) %> </span>
                        <span> <%= link_to 'Users', users_path %> </span>
                        <span> <%= link_to 'Logout', logout_path, method: :delete %> </span>
                    </div>
                </li>
            <% else %>
                <li><%= link_to 'Login', login_path %></li>
            <% end %>
        </ul>
    </nav>
</div>
