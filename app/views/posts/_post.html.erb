<div class="post">
  <div class="post-body">
    <%= link_to post ,style: 'border:none' do%>
      <h3 class="title"><%= post.title %></h3>
      <span class="content"><%= post.body[0..100] %>...</span>
      <div style="display:flex;justify-content:space-evenly" class="timestamp">
        <div>
          <i class="fa fa-clock-o"></i> <%= time_ago_in_words(post.created_at) %>
        </div>
        <div class="user"> <i class="fa fa-user-o"></i> <%= link_to (current_user == post.user ? 'You' : post.user.name), post.user %></div>
        <div> <i class="fa fa-comment-o"></i> <%= post.comments.count %></div>
      </div>
    <% end %>
      <% if current_user == post.user %>
      <div class="btn-container" style='border-top:solid 1px silver;padding-top:10px'>
          <%= link_to  edit_post_path(post) do%>
            <i class="fa fa-pencil-square-o"></i>
          <% end %>
          <%= link_to post_path(post), method: :delete, data: {confirm: "Are you sure?"} do%>
            <i class="fa fa-trash-o"></i>
          <% end %>
      </div>
      <% end %>
  </div>
</div>
