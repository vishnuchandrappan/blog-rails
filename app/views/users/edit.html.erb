<%= provide(:title,"edit") %>
<h1 class="page-title">Edit Profile</h1>

<div class="form-container">
	<%= render 'shared/error_messages' %>
	<%= form_for(@user) do |f|  %>
		<div class="form-group">
			<%= gravatar_for(@user) %>
			<small><a href="http://gravatar.com/emails" class="btn-secondary text-align-right" target="_blank">Change gravatar</a></small>
		</div>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-input" %>
		</div>
		<div class="form-group">
			<%= f.label :email %>
			<%= f.text_field :email, class: "form-input", disabled:true %>
		</div>
		<div class="form-group">
			<%= f.label :password %>
			<%= f.password_field :password, class: "form-input" %>
		</div>
		<div class="form-group">
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, class: "form-input" %>
		</div>
		<div class="btn-container">
    	<%= f.submit "Update Details", class: "btn-primary" %>
		</div>
	<% end %>
</div>
