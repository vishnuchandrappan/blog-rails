<% provide(:title,'SignUp') %>

<h1 class="page-title">Create New Accout</h1>

<div class="form-container">
  <%= render 'shared/error_messages' %>
  <%= form_for(@user) do |f|%>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-input" %>
  </div>
  <div class="btn-container">
    <%= f.submit "Create my account", class: "btn-primary" %>
  </div>
  <% end %>
</div>
