<div class="form-container">
    <%= render 'shared/post_errors' %>
    <%= form_for(@post, url: posts_path) do |f| %>
        <div class="form-group">
            <%= f.text_field :title, placeholder: 'Title of the post...', class:'form-input' %>
        </div>
        <div class="form-group">
            <%= f.text_area :body, placeholder: 'Compose new post...', class: 'form-input' %>
        </div>
        <div class="btn-container">
            <%= f.submit "Post", class: "btn-secondary" %>
        </div>
    <% end %>
</div>
