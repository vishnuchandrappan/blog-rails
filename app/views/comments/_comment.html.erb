<div class="comment">
    <div class="comment-details">
        <small class="time">
            <%= time_ago_in_words(comment.created_at) %>
            <%= comment.created_at == comment.updated_at ? " " : "(edited)" %>
        </small>
        <small class="user">
            <i class="fa fa-user-o"></i>
            <%= link_to author_name(comment), user_path(comment.user) %>
        </small>
        <% if((current_user == comment.user) || current_user.admin?) %>
            <div class="comment-menu">
              <% unless current_user.admin? %>
                <%= link_to edit_post_comment_path(comment.post, comment) do %>
                    <i class="fa fa-pencil editcomment"></i>
                <% end %>
              <% end %>
                <%= link_to post_comment_path(comment.post, comment), method: :delete, data: {confirm: "Are you sure?"} do %>
                    <i class="fa fa-trash-o deletecomment"></i>
                <% end %>
            </div>
        <% end %>
    </div>
    <div class="content">
        <%= comment.content %>
    </div>
</div>
